{
  "expo": {
    "name": "Mapin",
    "slug": "mapin-mobile",
    "version": "1.0.3",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mapinmobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.lemesvini.mapinmobile",

      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Permitir que $(PRODUCT_NAME) use sua localização para criar pins em lugares específicos.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Permitir que $(PRODUCT_NAME) use sua localização para criar pins em lugares específicos.",
        "ITSAppUsesNonExemptEncryption": false,
        "MBXAccessToken": "pk.eyJ1IjoidmluaWNpdXNsZW1lcyIsImEiOiJjbWl4ZTBnb2cwMzM1M2VvY2lqdzZtOXc1In0.jn7iH1oAzIqI_oCywaaIUA"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.lemesvini.mapinmobile",
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/mapin-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/images/mapin-icon-dark.png",
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Permitir que $(PRODUCT_NAME) use sua localização para criar pins em lugares específicos.",
          "locationWhenInUsePermission": "Permitir que $(PRODUCT_NAME) use sua localização para criar pins em lugares específicos.",
          "isAndroidBackgroundLocationEnabled": false,
          "isIosBackgroundLocationEnabled": false
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsVersion": "11.16.2"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "41b8c267-4d4a-4c4d-98e5-57dc047f02a9"
      },
      "mapboxAccessToken": "pk.eyJ1IjoidmluaWNpdXNsZW1lcyIsImEiOiJjbWl4ZTBnb2cwMzM1M2VvY2lqdzZtOXc1In0.jn7iH1oAzIqI_oCywaaIUA"
    }
  }
}
